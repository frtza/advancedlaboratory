# change color cyle
axes.prop_cycle : cycler('color', ['olivedrab', 'steelblue', 'firebrick', 'goldenrod'])

# use pgf backend
backend : pgf

# figure size in inches
figure.figsize : 5.78, 3.57

# set up constrained layout, axis padding in inches
figure.constrained_layout.use : True
figure.constrained_layout.w_pad : 0.11 
figure.constrained_layout.h_pad : 0.11

# use serif font
font.family : serif

# font sizes
font.size : 10
legend.fontsize : small
legend.frameon : False
xtick.labelsize : 9
xtick.minor.visible : True
ytick.labelsize : 9
ytick.minor.visible : True

# use specified font settings
pgf.rcfonts : False

# use tex
text.usetex : True
pgf.texsystem : lualatex
pgf.preamble : \input{header-matplotlib.tex}
